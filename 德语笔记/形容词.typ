  table(
    columns: 5,
    table.hline(),
    table.header([], [m], [f], [n], [Pl.]),
    table.hline(),
    [N.], [e], [e], [e], [en],
    [G.], [en], [en], [en], [en],
    [D.], [en], [en], [en], [en],
